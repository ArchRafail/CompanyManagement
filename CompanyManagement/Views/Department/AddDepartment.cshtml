@using CompanyManagement.Models
@model Department

@{
    Layout = "../_Layout";
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="container w-50 align-content-center">
    <h2 class="text-center my-5">Add Department</h2>
    <form method="post">
        <div class="mb-3">
            <label for="" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="fst-italic text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Manager</label>
            <input type="text" class="form-control" asp-for="Manager">
            <span asp-validation-for="Manager" class="fst-italic text-danger"></span>
        </div>

        <div class="row justify-content-center gap-4">
            <button type="submit" class="btn btn-success w-25">Create</button>
            <input type="button" class="btn btn-primary w-25" onclick="window.location='@Url.Action("Index","Department")'" value="Return" />
        </div>

    </form>
</div>