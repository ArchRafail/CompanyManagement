@using CompanyManagement.ViewModels

@model PasswordModel

@{
    ViewData["Title"] = "Password Change";
    Layout = "../_Layout";
}

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="container w-50">
    <h2 class="bg-info text-white text-center mb-5">Password Change</h2>

    @if (Model != null && Model.Message != null)
    {
        <h4 class="text-center fst-italic text-danger mb-4">@Model.Message</h4>
    }

    <form method="post">
        <div class="form-group mb-3 d-none">
            <input type="number" asp-for="Id" class="form-control" value="@Model!.Id" readonly />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password">New password</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="fst-italic text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword">Confirm password</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="fst-italic text-danger"></span>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary w-25" type="submit">Change Password</button>
        </div>
    </form>
</div>